<% layout("./layouts/boilerplate.ejs")%>
<style>
    *{
    margin: 0;
    padding: 0%;
     font-family: 'Poppins', sans-serif; 
}
.login{
    background: #4070f4
}
a{
    text-decoration: none;
}
.container{
    background: white;
    padding-bottom: 4%;
    border-radius: 10px;
    box-shadow: 2px 2px 6px black;
    width: 500px !important; 
   
}
.p{ position: relative;
    top:10%;
   left:20%;
}
#forgota{
    position: relative;
    left: 35%;
}
.login_a{
    font-size: 0.8rem;
    display: block;
    margin: auto;
    text-decoration:underline;
    text-align: center;
    
}
@media  (max-width: 768px) {
   
    .login{
        font-size: 4px;
         display: flex;
        justify-content: center !important;
        align-items: center !important;
    }
    .container{position: absolute;
        top:10%;
       
        width: 300px !important;
        padding-bottom: 3rem;
       text-align: center;
    }
    .button{
        width: 50%!important;
        margin-top: 3%;
        font-size: 14px !important;
    }
    .p{ position: relative;
        top:-1%;
        left:15% !important;
        font-size: 0.8rem !important;
    }
    #forgota{
        font-size: 0.8rem !important;
        left:30%;
        top: -10%;
    }
    .invalid-feedback{
        font-size: 0.8rem !important;
    }

}
h4{

text-align: center;
margin-top: 1rem;
}
</style>
<body class="login">
      <%-include("../includes/flash.ejs")%>
      <script src="/js/validate.js"></script>

<div class="container mt-5"> <br>
    <h4 class="">Forgot Password </h4><br>
    <form action="/login/forgot"  method="post" class="needs-validation" novalidate>
        <div class="row">
                <div class="col-10 offset-1">
            <div class=" mt-3">
               
                <input required type="text" class="form-control"name="email" placeholder="Enter email">
                  <div class="invalid-feedback">Enter Email !</div></div><br><br>
          
        </div>
        </div>
        <div class="d-grid"> <button class="btn btn-success d-grid col-8 mx-auto button">Send Otp</button></div>
       
    </form> 
</div>
</body>
