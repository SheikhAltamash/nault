<% layout("./layouts/boilerplate.ejs")%>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    body.login {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .reset_container {
        background: white;
        padding: 3rem 2.5rem;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        margin: 2rem 1rem;
    }

    .login_logo {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 2rem;
        color: #4070f4;
        font-family: "Poppins", sans-serif;
        font-weight: 600;
    }

    .logo_icon {
        font-size: 2rem;
        margin-right: 0.5rem;
        color: #4070f4;
    }

    .logo_text {
        font-size: 2rem;
        font-weight: 600;
        color: #4070f4;
    }

    .form_title {
        text-align: center;
        font-size: 1.8rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 2rem;
        font-family: "Poppins", sans-serif;
    }

    .form_group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        width: 100%;
        padding: 0.9rem 1rem;
        border: 2px solid #e1e5e9;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #f8f9fa;
    }

    .form-control:focus {
        outline: none;
        border-color: #4070f4;
        background: white;
        box-shadow: 0 0 0 3px rgba(64, 112, 244, 0.1);
    }

    .form-control::placeholder {
        color: #adb5bd;
    }

    .reset_button {
        width: 100%;
        padding: 0.9rem;
        background: linear-gradient(135deg, #28a745 0%, #34ce57 100%);
        border: none;
        border-radius: 10px;
        color: white;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 1rem;
        font-family: "Poppins", sans-serif;
    }

    .reset_button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(40, 167, 69, 0.3);
    }

    .form_description {
        text-align: center;
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
        line-height: 1.5;
    }

    @media (max-width: 480px) {
        .reset_container {
            margin: 1rem;
            padding: 2rem 1.5rem;
        }
    }
</style>

<body class="login">
    <div class="reset_container">
        <div class="login_logo">
            <i class="fa-brands fa-neos logo_icon"></i>
            <h2 class="logo_text">Nault</h2>
        </div>

        <%-include("../includes/flash.ejs")%>

        <h4 class="form_title">Reset Password</h4>
        <p class="form_description">Enter your new password below</p>

        <form action="/login/resetPassword" method="post" class="needs-validation" novalidate>
            <div class="form_group">
                <input type="password" class="form-control" name="newPassword1" 
                       placeholder="Enter New Password" required>
                <div class="invalid-feedback">Enter New Password</div>
            </div>

            <div class="form_group">
                <input type="password" class="form-control" name="newPassword2" 
                       placeholder="Confirm New Password" required>
                <div class="invalid-feedback">Confirm Password</div>
            </div>

            <button type="submit" class="btn reset_button">Reset Password</button>
        </form>
    </div>

    <script src="/js/validate.js"></script>
</body>
