<% layout("./layouts/boilerplate.ejs")%>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    body.login {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .otp_container {
        background: white;
        padding: 3rem 2.5rem;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        margin: 2rem 1rem;
    }

    .login_logo {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 2rem;
        color: #4070f4;
        font-family: "Poppins", sans-serif;
        font-weight: 600;
    }

    .logo_icon {
        font-size: 2rem;
        margin-right: 0.5rem;
        color: #4070f4;
    }

    .logo_text {
        font-size: 2rem;
        font-weight: 600;
        color: #4070f4;
    }

    .form_title {
        text-align: center;
        font-size: 1.8rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 1rem;
        font-family: "Poppins", sans-serif;
    }

    .form_description {
        text-align: center;
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 2rem;
        line-height: 1.5;
    }

    .email_highlight {
        color: #4070f4;
        font-weight: 500;
        font-style: normal;
    }

    .form_group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        width: 100%;
        padding: 0.9rem 1rem;
        border: 2px solid #e1e5e9;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #f8f9fa;
        text-align: center;
        letter-spacing: 0.2em;
    }

    .form-control:focus {
        outline: none;
        border-color: #4070f4;
        background: white;
        box-shadow: 0 0 0 3px rgba(64, 112, 244, 0.1);
    }

    .form-control::placeholder {
        color: #adb5bd;
        letter-spacing: normal;
    }

    .verify_button {
        width: 100%;
        padding: 0.9rem;
        background: linear-gradient(135deg, #28a745 0%, #34ce57 100%);
        border: none;
        border-radius: 10px;
        color: white;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 1rem;
        font-family: "Poppins", sans-serif;
    }

    .verify_button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(40, 167, 69, 0.3);
    }

    .resend_section {
        text-align: center;
        margin-top: 1.5rem;
        color: #6c757d;
        font-size: 0.9rem;
    }

    .resend_link {
        color: #4070f4;
        text-decoration: none;
        font-weight: 500;
    }

    .resend_link:hover {
        text-decoration: underline;
    }

    .back_to_login {
        text-align: center;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e1e5e9;
    }

    .back_to_login a {
        color: #6c757d;
        text-decoration: none;
        font-size: 0.9rem;
    }

    .back_to_login a:hover {
        color: #4070f4;
    }

    @media (max-width: 480px) {
        .otp_container {
            margin: 1rem;
            padding: 2rem 1.5rem;
        }
    }
</style>

<body class="login">
    <div class="otp_container">
        <div class="login_logo">
            <i class="fa-brands fa-neos logo_icon"></i>
            <h2 class="logo_text">Nault</h2>
        </div>

        <%-include("../includes/flash.ejs")%>

        <h4 class="form_title">OTP Verification</h4>
        <p class="form_description">
            Password reset OTP has been sent to<br>
            <span class="email_highlight"><%=email%></span>
        </p>

        <form action="/login/verify-otp/forgot" method="post" class="needs-validation" novalidate>
            <div class="form_group">
                <input type="text" class="form-control" name="otp" 
                       placeholder="Enter 6-digit OTP" maxlength="6" required>
                <div class="invalid-feedback">Enter Valid OTP</div>
            </div>

            <button type="submit" class="btn verify_button">Verify OTP</button>
        </form>

        <!-- <div class="resend_section">
            <p>Didn't receive the code? <a href="#" class="resend_link">Resend OTP</a></p>
        </div> -->

        <div class="back_to_login">
            <a href="/login">‚Üê Back to Login</a>
        </div>
    </div>

    <script src="/js/validate.js"></script>
</body>
