<% layout("./layouts/boilerplate.ejs")%>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    body.login {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .login_container {
        background: white;
        padding: 3rem 2.5rem;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        margin: 2rem 1rem;
    }

    .login_logo {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 2rem;
        color: #4070f4;
        font-family: "Poppins", sans-serif;
        font-weight: 600;
    }

    .logo_icon {
        font-size: 1.7rem;
        margin-right: 0.5rem;
        position: relative;
        top: -0.3rem;
        color: #4070f4;
    }

    .logo_text {
        font-size: 2rem;
        font-weight: 600;
        color: #4070f4;
    }

    .form_title {
        text-align: center;
        font-size: 1.8rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 2rem;
        font-family: "Poppins", sans-serif;
    }

    .form_group {
        margin-bottom: 1.5rem;
    }

    .login_label {
        display: block;
        font-size: 0.9rem;
        font-weight: 500;
        color: #555;
        margin-bottom: 0.5rem;
        font-family: "Poppins", sans-serif;
    }

    .form-control {
        width: 100%;
        padding: 0.9rem 1rem;
        border: 2px solid #e1e5e9;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #f8f9fa;
    }

    .form-control:focus {
        outline: none;
        border-color: #4070f4;
        background: white;
        box-shadow: 0 0 0 3px rgba(64, 112, 244, 0.1);
    }

    .form-control::placeholder {
        color: #adb5bd;
    }

    .login_button {
        width: 100%;
        padding: 0.9rem;
        background: linear-gradient(135deg, #4070f4 0%, #5b8def 100%);
        border: none;
        border-radius: 10px;
        color: white;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin: 1rem 0;
        font-family: "Poppins", sans-serif;
    }

    .login_button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(64, 112, 244, 0.3);
    }

    .form_footer {
        text-align: center;
        margin-top: 2rem;
    }

    .form_footer p {
        color: #6c757d;
        margin-bottom: 1rem;
    }

    .form_footer a {
        color: #4070f4;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .form_footer a:hover {
        color: #2c5aa0;
    }

    .forgot_password {
        display: inline-block;
        padding: 0.6rem 1.5rem;
        border: 2px solid #e1e5e9;
        border-radius: 8px;
        color: #6c757d;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
        transition: all 0.3s ease;
        margin-top: 1rem;
    }

    .forgot_password:hover {
        border-color: #4070f4;
        color: #4070f4;
        background: rgba(64, 112, 244, 0.05);
    }

    .divider {
        margin: 2rem 0;
        text-align: center;
        position: relative;
        color: #adb5bd;
    }

    .divider::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 1px;
        background: #e1e5e9;
    }

    .divider span {
        background: white;
        padding: 0 1rem;
        font-size: 0.9rem;
    }

    .invalid-feedback {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    @media (max-width: 480px) {
        .login_container {
            margin: 1rem;
            padding: 2rem 1.5rem;
        }
    }
</style>

<body class="login">
    <div class="login_container">
        <div class="login_logo">
            <i class="fa-brands fa-neos logo_icon"></i>
            <h2 class="logo_text">Nault</h2>
        </div>

        <%-include("../includes/flash.ejs")%>

        <h4 class="form_title">Login</h4>

        <form action="/login/log" method="post" class="needs-validation" novalidate>
            <div class="form_group">
                <label for="username" class="login_label">Username</label>
                <input required type="text" class="form-control" name="username" 
                       placeholder="Enter your username or email" id="username">
                <div class="invalid-feedback">Enter Username!</div>
            </div>

            <div class="form_group">
                <label for="password" class="login_label">Password</label>
                <input required type="password" class="form-control" name="password" 
                       placeholder="Enter your password" id="password">
                <div class="invalid-feedback">Enter Password!</div>
            </div>

            <button type="submit" class="btn login_button">Login</button>
        </form>

        <div class="form_footer">
            <div class="divider">
                <span>or</span>
            </div>
            <p>Don't have an account? <a href="/login/signup">Create New</a></p>
            <a href="/login/forgotpassword" class="forgot_password">Forgot Password</a>
        </div>
    </div>

    <script src="/js/validate.js"></script>
</body>
