<%if(success&&success.length){%>
    <div class="alert alert-success alert-dismissible fade show d-flex align-items-center success col-6 offset-3 mt-4 " role="alert">
 <h4> <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
 &nbsp;&nbsp;&nbsp;
  <%=success%> </h4>
 <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<%}%>


<%if(error&&error.length){%>
    <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center success  mt-4 " role="alert">
 <p> <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
 &nbsp;&nbsp;&nbsp;
  <%=error%> </p>
 <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<%}%>

<style>
    .success{
        font-size: 1rem !important;
     
    }
    @media  (max-width: 768px) {
        .success{
            font-size: 0.8rem !important;
        }
    }

</style>
