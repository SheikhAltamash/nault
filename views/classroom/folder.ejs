            <p class="warning-p" style="color: var(--text-secondary); font-size: 1rem; line-height: 1.6; margin-bottom: 2rem;">
                <span style="color: var(--danger-color) !important; font-weight: 700 !important; font-size: 1.1rem !important;">⚠️ Warning</span><br>
                Deleting this folder will permanently remove all files.<br>
                This action cannot be undone.<br>
                Are you sure you want to proceed?
            </p>
            <form action="/folder/delete/<%=folder._id%>?_method=DELETE" method="post" style="display: inline;">
                <input type="text" class="form-control mx-auto" name="name" placeholder="Type folder name to confirm" style="width: max-content; margin: auto !important; margin-top: 15px !important; padding: 0.75rem 1rem; border: 2px solid var(--border-color); border-radius: 8px;">
                <br>
                <button class="btn btn-danger" style="margin: 10px; background: var(--danger-color) !important;">🗑️ Delete Forever</button>
                <button type="button" class="btn btn-primary deleteFolderCancel" style="margin: 10px; background: var(--primary-color) !important;">❌ Cancel</button>
            </form>
        </div>
    </div>
    <% } %>

    <!-- File Delete Modal -->
    <div class="del-mes">
        <h6 style="color: var(--text-primary); margin-bottom: 1.5rem; font-weight: 500;">🗑️ Delete this file permanently?</h6>
        <button class="btn btn-primary cancel" style="padding: 0.75rem 1.5rem !important; margin: 0 0.5rem !important; background: var(--primary-color) !important;">❌ Cancel</button> 
        <a id="deleteLink" href="">
            <button class="btn btn-danger" style="padding: 0.75rem 1.5rem !important; margin: 0 0.5rem !important; background: var(--danger-color) !important;">🗑️ Delete</button>
        </a>
    </div>

    <!-- Main Content -->
    <div class="arrow">
        <a href="/folder/back/<%=folder._id%>">
            <i class="fa-solid fa-arrow-left"></i>
        </a>
    </div>
    
    <h2 class="h2_folder"><%=folder.subject.username%></h2>
    <h3 class="h2forfolder">📁 <%=folder.name%></h3>

    <% if (folder.image && folder.image.length > 0) { %>
<div class="box">
    <% for (i of folder.image) { %>
    <div class="data" data-type="<%= i.url.includes('.pdf') ? 'pdf' : 'image' %>">
        <!-- File Type Badge -->
        <div class="file-type-badge">
            <%= i.url.includes('.pdf') ? 'PDF' : 'IMG' %>
        </div>
        
        <% if (i.url.includes('.pdf')) { %>
            <!-- Enhanced PDF Display -->
            <a href="<%= i.url %>" target="_blank" class="file-link">
                <div class="pdf-file">
                    <i class="fa-solid fa-file-pdf pdf-icon"></i>
                    <span class="pdf-label">PDF Document</span>
                </div>
            </a>
        <% } else { %>
            <!-- Enhanced Image Display -->
            <a href="<%= i.url %>" target="_blank" class="file-link">
                <img src="<%= i.url %>" alt="<%= i.filename %>" class="img_file" loading="lazy">
            </a>
        <% } %>
        
        <div class="file-info">
            <span class="file-name">
                <%= (i.filename.slice(0,20)) %><%= i.filename.length > 20 ? '...' : '' %>
            </span>
            
            <div class="file-meta">
                <div class="file-author">
                    <div class="author-avatar">
                        <%= i.author.charAt(0).toUpperCase() %>
                    </div>
                    <span><%= i.author %></span>
                </div>
                
                <% if(i.author == currUser.username) { %>
                    <i class="fa-solid fa-trash-can file-delete delete_not" 
                       onclick="deleteimage('<%= i.originalName %>')" 
                       title="Delete file"></i>
                <% } %>
            </div>
        </div>
    </div>
    <% } %>
</div>
<% } else { %>
<div class="empty-state">
    <h6>No files uploaded yet</h6>
    <p>Click the upload button to add your first file</p>
</div>
<% } %>
</div>

<!-- Enhanced Floating Upload Button -->
<div class="add_upload" style="background-color: transparent !important;">
    <i class="fa-solid fa-cloud-arrow-up upload_icon"></i>
</div>

<script>
// Fixed Upload Functionality
let contact = document.querySelector(".contacts_file");
let collapse = document.querySelector(".collapse-contacts_file");
let col = true;

if (contact && collapse) {
    contact.addEventListener("click", () => {
        if (col) {
            collapse.style.display = "inline";
            col = false;
        } else {
            collapse.style.display = "none";
            col = true;
        }
    });
}

// Upload Modal Controls
let uploadForm = document.querySelector(".subject_form_upload");
let uploadButton = document.querySelector(".add_upload");
let closeUploadBtn = document.getElementById("close-upload");
let show = true;

function showUploadForm() {
    uploadForm.style.display = "flex";
    show = false;
    // uploadButton.classList.add("active");
    document.body.style.overflow = "hidden";
    
    setTimeout(() => {
        let fileNameInput = document.getElementById("file-name");
        if (fileNameInput) fileNameInput.focus();
    }, 300);
}

function hideUploadForm() {
    uploadForm.style.display = "none";
    show = true;
    uploadButton.classList.remove("active");
    document.body.style.overflow = "";
    
    // Reset form without affecting the selected file
    let form = document.getElementById("upload-form");
    let fileInput = document.getElementById("file-input");
    let nameInput = document.getElementById("file-name");
    
    if (nameInput) nameInput.value = "";
    
    // Only clear invalid feedback, not the file selection
    let invalidFeedback = document.querySelector(".invalid-feedback");
    if (invalidFeedback) {
        invalidFeedback.style.display = "none";
    }
}

// Upload button click handler
if (uploadButton) {
    uploadButton.addEventListener("click", () => {
        if (show) {
            showUploadForm();
        } else {
            hideUploadForm();
        }
    });
}

// Close button handler
if (closeUploadBtn) {
    closeUploadBtn.addEventListener("click", hideUploadForm);
}

// Close on backdrop click
if (uploadForm) {
    uploadForm.addEventListener("click", (e) => {
        if (e.target === uploadForm) {
            hideUploadForm();
        }
    });
}

// Form submission handler with loading state
let form = document.getElementById("upload-form");
let submitBtn = document.getElementById("submit-btn");

if (form && submitBtn) {
    form.addEventListener("submit", function(e) {
        let fileInput = document.getElementById("file-input");
        let invalidFeedback = document.querySelector(".invalid-feedback");
        
        if (!fileInput.files.length) {
            e.preventDefault();
            e.stopPropagation();
            if (invalidFeedback) {
                invalidFeedback.style.display = "block";
            }
            return false;
        }
        
        // Show loading state
        submitBtn.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> Uploading...';
        submitBtn.disabled = true;
        
        // Hide invalid feedback
        if (invalidFeedback) {
            invalidFeedback.style.display = "none";
        }
    });
}

// Delete functionality
let delMes = document.querySelector(".del-mes");
let cancelButton = document.querySelector(".cancel");
let folderDeleteButton = document.querySelector(".FolderDelete");
let folderDeleteForm = document.querySelector(".deleteFolderConform");
let folderDeleteCancel = document.querySelector(".deleteFolderCancel");

if (folderDeleteButton && folderDeleteForm) {
    folderDeleteButton.addEventListener("click", () => {
        folderDeleteForm.style.display = "flex";
        document.body.style.overflow = "hidden";
    });
}

if (folderDeleteCancel && folderDeleteForm) {
    folderDeleteCancel.addEventListener("click", () => {
        folderDeleteForm.style.display = "none";
        document.body.style.overflow = "";
    });
}

if (cancelButton && delMes) {
    cancelButton.addEventListener("click", () => {
        delMes.style.display = "none";
    });
}

function deleteimage(data) {
    if (delMes) {
        delMes.style.display = "block";
        let deleteLink = document.getElementById("deleteLink");
        let folderId = "<%= folder._id %>";
        if (deleteLink) {
            deleteLink.href = `/folder/delete/${data}/${folderId}`;
        }
    }
}

// Keyboard shortcuts
document.addEventListener("keydown", (e) => {
    if (e.key === "Escape") {
        if (!show && uploadForm) {
            hideUploadForm();
        }
        
        if (delMes && delMes.style.display !== "none") {
            delMes.style.display = "none";
        }
        
        if (folderDeleteForm && folderDeleteForm.style.display !== "none") {
            folderDeleteForm.style.display = "none";
            document.body.style.overflow = "";
        }
    }
});

// File input change handler for better UX
let fileInput = document.getElementById("file-input");
if (fileInput) {
    fileInput.addEventListener("change", (e) => {
        let invalidFeedback = document.querySelector(".invalid-feedback");
        if (e.target.files.length > 0 && invalidFeedback) {
            invalidFeedback.style.display = "none";
        }
    });
}
</script>
</body>
