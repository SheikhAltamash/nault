    border: 1px solid var(--border-color);
}

.warning-p {
    color: var(--text-secondary);
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
}

.warning-p span {
    color: var(--danger-color) !important;
    font-weight: 600 !important;
}

/* Empty State */
