                    <button class="btn btn-success col-8 mx-auto" type="submit">Add Folder</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="deleteFolderConform">
        <div class="under">
            <p class="warning-p">
                <span>Warning</span><br>
                Deleting this subject will also delete all its folders and files.<br>
                This action is irreversible.<br>
                Proceed?
            </p>
            <form action="/subject/delete/<%=subject._id%>?_method=DELETE" method="post" style="display: inline;">
                <input type="text" class="form-control mx-auto" name="name" placeholder="Enter subject name" style="width: max-content; margin: auto !important; margin-top: 15px !important;">
                <br>
                <button class="btn btn-danger" style="margin: 10px;">Delete</button>
                <button type="button" class="btn btn-secondary deleteFolderCancel" style="margin: 10px;">Cancel</button>
            </form>
        </div>
    </div>

    <% if(subject) {%>
    <div class="folder">
        <div class="arrow">
            <a href="/subject/back/<%=subject._id%>">
                <i class="fa-solid fa-arrow-left"></i>
            </a>
        </div>
        
        <h2 class="h2forfolder"><%=subject.username%></h2>
        
        <% if(subject.folder.length>0){ %>
        <h3 class="folderHeading">Folders</h3>
        <div class="folders-container">
            <% for(sub of subject.folder){ %>
            <form action="/folder/enter/<%=sub._id%>">
                <div class="folder1">
                    <button class="btn btnF"><%=sub.name%></button>
                </div>
            </form>
            <% } %>
        </div>
        <% }else{ %>
        <div class="empty-state">
            <h6>No folders found<br>Click the '+' button to add your first folder</h6>
        </div>
        <% } %>
    </div>
    <% }else{ %>
    <div class="empty-state">
        <h3>No Subject Found!</h3>
        <p><a href="/classroom">Go to home</a></p>
    </div>
    <% } %>
</div>

<!-- Floating Add Button -->
<div class="add">
    <i class="fa-solid fa-plus upload_icon button_icon"></i>
</div>

<script>
// Modal controls
const addButton = document.querySelector(".add");
const subjectForm = document.querySelector(".subject_form");
const folderForm = document.getElementById("folder-form");
const closeBtn = document.getElementById("close-form");
let isFormVisible = false;

// Delete modal controls
const folderDeleteButton = document.querySelector(".FolderDelete");
const folderDeleteForm = document.querySelector(".deleteFolderConform");
const folderDeleteCancel = document.querySelector(".deleteFolderCancel");

// Add folder functionality
function showForm() {
    subjectForm.style.display = "flex";
    isFormVisible = true;
    addButton.classList.add("active");
    document.body.style.overflow = "hidden";
    
    setTimeout(() => {
        document.getElementById("folder-name").focus();
    }, 300);
}

function hideForm() {
    subjectForm.style.display = "none";
    isFormVisible = false;
    addButton.classList.remove("active");
    document.body.style.overflow = "";
    
    if (folderForm) {
        folderForm.reset();
        document.getElementById("folder-name").classList.remove("is-invalid");
    }
}

addButton.addEventListener("click", () => {
    if (!isFormVisible) {
        showForm();
    } else {
        hideForm();
    }
});

// Close form on close button click
if (closeBtn) {
    closeBtn.addEventListener("click", hideForm);
}

// Close on backdrop click
subjectForm.addEventListener("click", (e) => {
    if (e.target === subjectForm) {
        hideForm();
    }
});

// Close on Escape key
document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && isFormVisible) {
        hideForm();
    }
});

// Delete subject functionality
if (folderDeleteButton) {
    folderDeleteButton.addEventListener("click", () => {
        folderDeleteForm.style.display = "flex";
        document.body.style.overflow = "hidden";
    });
}

if (folderDeleteCancel) {
    folderDeleteCancel.addEventListener("click", () => {
        folderDeleteForm.style.display = "none";
        document.body.style.overflow = "";
    });
}

// Form validation
if (folderForm) {
    const folderInput = document.getElementById("folder-name");
    
    folderInput.addEventListener("blur", () => {
        if (!folderInput.value.trim()) {
            folderInput.classList.add("is-invalid");
        } else {
            folderInput.classList.remove("is-invalid");
        }
    });

    folderInput.addEventListener("input", () => {
        if (folderInput.value.trim()) {
            folderInput.classList.remove("is-invalid");
        }
    });
}

// Contacts toggle
const contactsLink = document.querySelector(".contacts");
const collapseContacts = document.querySelector(".collapse-contacts");

if (contactsLink && collapseContacts) {
    contactsLink.addEventListener("click", () => {
        if (collapseContacts.style.display === "none" || !collapseContacts.style.display) {
            collapseContacts.style.display = "inline";
        } else {
            collapseContacts.style.display = "none";
        }
    });
}
</script>
</body>
