    }
}

@media (max-width: 480px) {
    /* Extra small mobile devices */
    .main-container {
        padding: 0.75rem 0.75rem;
    }
    
    .page-header {
        padding: 0 0.25rem;
        margin-bottom: 1.5rem;
    }
    
    .page-title {
