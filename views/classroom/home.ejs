}

</style>

<body>
<!-- User Avatar -->
<div class="user-avatar">M</div>

<nav class="navbar navbar-expand-md sticky-top navbar-light">
    <div class="container-fluid">
        <div class="head">
            <i class="fa-brands fa-neos"></i>
            <h2>Nault</h2>
        </div>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav ms-auto">
                <% if(!currUser){%>
                <a class="nav-link" href="/signup">Signup</a>
                <a class="nav-link" href="/login" style="color: white;">Login</a>
                <%}%>
                <%if(currUser){%>
                <a class="nav-link" href="/login/logout" style="color: white;">Logout <i class="fa-solid fa-arrow-right-from-bracket"></i></a>
                <%}%>
            </div>
        </div>
    </div>
</nav>

<div class="main-container">
    <%-include("../includes/flash.ejs")%>

    <% if(classData){%>
    <div class="page-header">
        <h1 class="page-title">Classroom</h1>
        <p class="page-subtitle">Manage your subjects and materials</p>
    </div>

    <!-- Modal Form -->
    <div class="form">
        <div class="form-content">
            <button type="button" class="form-close" id="close-form">
                <i class="fa-solid fa-times"></i>
            </button>
            
            <form action="/subject/create/<%=classData._id%>" class="needs-validation" novalidate method="post" id="subject-form">
                <h3>Create New Subject</h3>
                <input required 
                       type="text" 
                       class="form-control" 
                       name="subjectName" 
                       placeholder="Enter subject name" 
                       id="subject-name">
                <div class="invalid-feedback">Please enter a subject name</div>
                <button type="submit" class="btn btn-success button" id="create-btn">
                    Create Subject
                </button>
            </form>
        </div>
    </div>

    <!-- Subjects Grid -->
<!-- Enhanced Subjects Grid -->
<% if (classData && classData.subject && classData.subject.length) { %>
  <div class="subjects-grid">
    <% for (let sub of classData.subject) { %>
      <form action="/subject/<%= sub._id %>">
        <div class="subject-card">
          <button class="subject-btn">
            <span class="subject-title"><%= sub.username %></span>
            <span class="subject-caption">Tap to explore</span>
          </button>
        </div>
      </form>
    <% } %>
  </div>
<% } else { %>
  <div class="empty-state">
    <h6>No subjects found<br>Click “+” to add your first subject</h6>
  </div>
<% } %>


    <%} else {%>
    <div class="empty-state">
        <h5>Classroom not found</h5>
        <a href="/classroom">
            <button class="btn btn-success buttons">Go to Home</button>
        </a>
    </div>
    <% } %>
</div>

<!-- Floating Add Button -->
<div class="add">
    <i class="fa-solid fa-plus"></i>
</div>

<script>
const addButton = document.querySelector(".add");
const form = document.querySelector(".form");
const icon = document.querySelector(".fa-plus");
const closeBtn = document.getElementById("close-form");
const subjectForm = document.getElementById("subject-form");
const createBtn = document.getElementById("create-btn");
let isFormVisible = false;

function showForm() {
    form.style.display = "flex";
    isFormVisible = true;
    addButton.classList.add("active");
    document.body.style.overflow = "hidden"; // Prevent background scroll
    
    // Focus on input after animation
    setTimeout(() => {
        document.getElementById("subject-name").focus();
    }, 300);
}

function hideForm() {
    form.style.display = "none";
    isFormVisible = false;
    addButton.classList.remove("active");
    document.body.style.overflow = ""; // Restore scroll
    
    // Clear form data
    if (subjectForm) {
        subjectForm.reset();
        document.getElementById("subject-name").classList.remove("is-invalid");
    }
}

// Show/hide form on add button click
addButton.addEventListener("click", () => {
    if (!isFormVisible) {
        showForm();
    } else {
        hideForm();
    }
});

// Close form on close button click
closeBtn.addEventListener("click", hideForm);

// Close form on backdrop click
form.addEventListener("click", (e) => {
    if (e.target === form) {
        hideForm();
    }
});

// Close form on Escape key
document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && isFormVisible) {
        hideForm();
    }
});

// Enhanced form submission
if (subjectForm) {
    subjectForm.addEventListener("submit", function(e) {
        const subjectInput = document.getElementById("subject-name");
        
        if (!subjectInput.value.trim()) {
            e.preventDefault();
            e.stopPropagation();
            subjectInput.classList.add("is-invalid");
        } else {
            createBtn.classList.add("loading");
            createBtn.textContent = "";
        }
    });

    // Real-time validation
    const subjectInput = document.getElementById("subject-name");
    subjectInput.addEventListener("blur", () => {
        if (!subjectInput.value.trim()) {
            subjectInput.classList.add("is-invalid");
        } else {
            subjectInput.classList.remove("is-invalid");
        }
    });

    subjectInput.addEventListener("input", () => {
        if (subjectInput.value.trim()) {
            subjectInput.classList.remove("is-invalid");
        }
    });
}
</script>
</body>
