            <% } %>

<div class="add">
  <i class="fa-solid fa-plus"></i>

</div>
   <%if(classData&&classData.subject){%>
    <%for(let i of classData.subject){%>

        <form action="/subject/<%=i._id%>"> <div class="folder1">  <button class="sub"> <%=i.username%>  </button> </div></form>

        <%}%>
        <%}%>

        <%if(classData&&!classData.subject.length){%>
              <h6 >Subject Needed<br>Click '+' button to add subject  </h6>

          <% } %>



 
   

<script>
    let button = document.querySelector(".add");
    let form= document.querySelector(".form");
    let span=document.querySelector(".navbar-toggler-icon");
    let icon = document.querySelector(".fa-plus");
    let check=true;
    button.addEventListener("click",()=>{
        if(check){
        form.style.display="flex";
        check=false;
        icon.style.color="white";
        button.style.background="blue";
        icon.classList.add("rotate-left");
        

}
    else if(check==false){
        form.style.display="none";
        check=true;
        icon.style.color="blue";
        button.style.background="white";
        icon.classList.remove("rotate-left");

    }
    });




</script>


